{
  "manifest_version": 3,
  "name": "Tab Guard",
  "description": "Keep your Chrome window tidy by capping how many tabs you can open. Tab Guard notifies you when you hit the limit.",
  "version": "1.0.3",
  "permissions": [
    "tabs",
    "windows",
    "storage",
    "notifications"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Tab Guard",
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; img-src 'self' https://cdn.buymeacoffee.com data:"
  }
}
